# APT Sources
# vim: set ft=debsources :
# {{ ansible_managed }}

# Main
deb https://deb.debian.org/debian {{ common_apt_edition | default(ansible_distribution_release, true) }} main contrib non-free
{% if common_apt_include_sources | default(false, true) %}
deb-src https://deb.debian.org/debian {{ common_apt_edition | default(ansible_distribution_release, true) }} main contrib non-free
{% endif %}

# Security
deb https://deb.debian.org/debian-security {{ common_apt_edition | default(ansible_distribution_release, true) }}-security main contrib non-free
{% if common_apt_include_sources | default(False, True) %}
deb-src https://deb.debian.org/debian-security {{ common_apt_edition | default(ansible_distribution_release, true) }}-security main contrib non-free
{% endif %}

# Updates
deb https://deb.debian.org/debian {{ common_apt_edition | default(ansible_distribution_release, true) }}-updates main contrib non-free
{% if common_apt_include_sources | default(False, True) %}
deb-src https://deb.debian.org/debian {{ common_apt_edition | default(ansible_distribution_release, true) }}-updates main contrib non-free
{% endif %}

